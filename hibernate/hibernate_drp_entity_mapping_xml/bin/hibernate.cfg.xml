<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_drp_entity_mapping_xml</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">bjpowernode</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">false</property>
		
		<mapping resource="com/bjpowernode/hibernate/User.hbm.xml"/>
		<mapping resource="com/bjpowernode/hibernate/DataDict.hbm.xml"/>
		<mapping resource="com/bjpowernode/hibernate/Item.hbm.xml"/>
		<mapping resource="com/bjpowernode/hibernate/FiscalYearPeriod.hbm.xml"/>
		<mapping resource="com/bjpowernode/hibernate/AimClient.hbm.xml"/>
		<mapping resource="com/bjpowernode/hibernate/Client.hbm.xml"/>
		<mapping resource="com/bjpowernode/hibernate/Area.hbm.xml"/>
		<mapping resource="com/bjpowernode/hibernate/FlowCard.hbm.xml"/>
		<mapping resource="com/bjpowernode/hibernate/FlowCardDetail.hbm.xml"/>
	</session-factory>
</hibernate-configuration>